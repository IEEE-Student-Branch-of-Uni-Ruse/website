          <div class="max-w-2xl mb-6 ml-auto mr-auto  tracking-tight  bg-top bg-cover sm:text-4xl md:mx-auto">
                <p class="inline max-w-lg  text-3xl font-bold leading-none tracking-tight  sm:text-4xl md:mx-auto">Our Awesome Team</p>
            </div>
        </div>
        <div class="grid gap-10 row-gap-8 ml-auto mr-auto sm:row-gap-10 lg:max-w-screen-lg sm:grid-cols-2 lg:grid-cols-3"> 
            {team.map((member) => (
                <TeamMember
                    Name={member.Name}
                    Title={member.Title}
                    Image={member.Image}
                    Href={member.Href}
                />
            ))}
        </div>
    </div>
</section>
</Layout>
